#define COL_1_PIN	PIN7
#define COL_2_PIN	PIN6
#define COL_3_PIN	PIN5
#define COL_4_PIN	PIN3

#define ROW_1_PIN	PIN5
#define ROW_2_PIN	PIN4
#define ROW_3_PIN	PIN3
#define ROW_4_PIN	PIN2

